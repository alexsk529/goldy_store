include ../../pug/_image

mixin location()
    .dropdown.location
        button(
            class="location__button d-flex justify-content-between align-items-center" 
            type="button" 
            data-bs-toggle="dropdown"
            data-bs-auto-close='outside'
            data-bs-offset='0,11' 
            aria-expanded="false"
            )
            +image('svg', 'location','location__icon')
            span.regular Санкт-Петербург
            +image('svg', 'arrow-down','location__arrow')
        ul.location__menu.dropdown-menu
            li.location__item.dropdown-list-item
                a.location__link.dropdown-item.active Санкт-Петербург
            li.location__item.dropdown-list-item
                a.location__link.dropdown-item Москва
            li.location__item.dropdown-list-item
                a.location__link.dropdown-item Нижний Новгород
            li.location__item.dropdown-list-item
                a.location__link.dropdown-item Ростов-на-Дону 