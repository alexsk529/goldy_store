include ../location/location.pug
include ../contacts/contacts.pug
include ../logo/logo.pug
include ../signin/signin.pug
include ../icons/icons.pug

mixin header()
    .header.d-flex.flex-column
        .header__contacts.d-flex.justify-content-between.align-items-center
            .header__geoblock.d-flex.justify-content-between.align-items-center 
                +location
                +contacts
            +logo
            .header__registrationblock.d-flex.justify-content-between.align-items-center 
                +signin
                +icons
        .header__nav     
            +navigation       